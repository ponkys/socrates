<div class="row no-gutters" draggable="true">
	<div class="col-24">
		<hr class="my-4" />
	</div>
	{{#if isDraggable}}
	<div class="col-20">
		{{else}}
		<div class="col-22">
			{{/if}}
			<div class="d-flex align-items-center">
				<a href="admin-add-gallery-content-step-2">
					{{#if icon }}
						{{#if isPlayer}}
							<img class="avatar rounded-circle size-3 mr-3" src="{{icon}}" alt="" />
						{{else}}
							<img class="avatar size-3 mr-3" src="{{icon}}" alt="" />
						{{/if}}
					{{else}}
					<img class="avatar size-3 mr-3" src="https://images.onefootball.com/default_gallery-icon.png" alt="" />
					{{/if}}
				</a>
				<div>
					{{#if isAuto}}
					<a href="#" class="h4 font-weight-bold text-gray-dark" data-toggle="modal" data-target="#modal-automated-alert">
					{{else}}
					<a href="admin-add-gallery-content-step-2" class="h4 font-weight-bold text-gray-dark">
					{{/if}}
						{{title}}
					</a>
					<p class="text-gray m-0">
						{{#if isAuto}}
							<img class="icon size-lg text-info inject-me" src="{{path '/assets/img/icons/ic_flash_circle_24px.svg' }}" data-toggle="tooltip" data-placement="top" title="Automated" />
						{{else}}
							<img class="icon size-lg text-primary inject-me" src="{{path '/assets/img/icons/ic_account_circle_24px.svg' }}" data-toggle="tooltip" data-placement="top" title="Curated" />
						{{/if}}

						{{type}}

						<img class="inject-me icon text-gray-light" src="{{path '/assets/img/icons/ic_dot_24px.svg' }}" />

						20 items

						<img class="inject-me icon text-gray-light" src="{{path '/assets/img/icons/ic_dot_24px.svg' }}" />

						<span class="text-warning">
							<img class="inject-me size-lg icon" src="{{path '/assets/img/icons/ic_access_time_24px.svg' }}" />
							6 hours ago
						</span>

						<img class="inject-me icon text-gray-light" src="{{path '/assets/img/icons/ic_dot_24px.svg' }}" />

						{{> @badge text="Published" color="primary"}}
					</p>
				</div>
			</div>
		</div>
		{{#if isDraggable}}
		<div class="col-sm-2 align-self-center">
			<a href="#" class="text-gray-light">
				<img class="inject-me icon size-2 ml-auto d-block" src="{{path '/assets/img/icons/ic_cursor_move_24px.svg' }}" data-toggle="tooltip" data-placement="top" title="Rearrange" />
			</a>
		</div>
		{{/if}}
		<div class="col-sm-2 align-self-center">
			<div class="dropdown">
				<a href="#" class="text-gray-light dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<img class="inject-me icon size-2 ml-auto d-block" src="{{path '/assets/img/icons/ic_more_horiz_24px.svg' }}" />
				</a>
				<div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
					<a href="#" class="dropdown-item">
						<img class="inject-me icon size-lg mr-2" src="{{path '/assets/img/icons/ic_content_copy_24px.svg' }}" /> Copy link
					</a>
					{{#if isAuto}}
						<a href="#" class="dropdown-item">
							<img class="inject-me icon size-lg mr-2" src="{{path '/assets/img/icons/ic_account_circle_24px.svg' }}" /> Switch to Curated
						</a>
					{{else}}
						<a href="#" class="dropdown-item">
							<img class="inject-me icon size-lg mr-2" src="{{path '/assets/img/icons/ic_flash_circle_24px.svg' }}" /> Switch to Automated
						</a>
					{{/if}}
					<a class="dropdown-item text-danger" href="#" data-toggle="modal" data-target="#modal-alert">
						<img class="inject-me icon size-lg mr-2" src="{{path '/assets/img/icons/ic_delete_24px.svg' }}" />
						Delete
					</a>
				</div>
			</div>
		</div>
	</div>